<!DOCTYPE html>
<html lang="en">
<%- include ('./patials/head') %>
<style type="text/css">
    /* Thay đổi màu nền và màu chữ trong khung tìm kiếm của DataTables */
.dataTables_filter input[type="search"] {
background-color: #f5f5f5;
color: rgb(7, 7, 7);
}

/* Thay đổi độ rộng của khung tìm kiếm của DataTables */
.dataTables_filter input[type="search"] {
width: 200px;
margin-bottom: 20px;
}

/* Thay đổi độ dày của khung tìm kiếm của DataTables */
.dataTables_filter input[type="search"] {
font-style: normal;
}
.dataTables_wrapper .dataTables_paginate {
margin-top: 20px;
margin-bottom: 20px;
}
.dataTables_paginate .paginate_button:hover {
background-color: #c1bbbb;
}

 </style>
    <body style=" height: 100vh;">
        <h1 style="margin-top: 55px;font-size: 36px;font-weight: 900;margin-bottom: 20px;display: flex; justify-content: center; align-items: center"></h1>
                    <div
                        style="display: flex; justify-content: center; margin-right: 120px;">
                        <div>
                            <table id="mytable" class="cell-border hover compact stripe"
                                style="width: 1200px;">
                                <thead style="height: 40px; background-color: rgb(109, 195, 234);; ">
                                    <tr>
                                      
                                        <th style="text-align: center;">User Name</th>
                                        <th style="text-align: center;">Name</th>
                                        <th style="text-align: center;">Year of birth</th>
                                        <th style="text-align: center;">Admin</th>                                       
                                    </tr>
                                </thead>
                                <tbody style="text-align: center;">
                                    <% users.forEach(function(user) { %>
                                        <tr>
                                            <td style="padding:5px;">
                                                <%= user.username %>
                                            </td>
                                            <td style="padding:5px;">
                                                <%= user.name %>
                                            </td>
                                            <td style="padding:5px;">
                                                <%= user.YOB %>
                                            </td>                                       
                                            <td style="padding:5px;">
                                                <%=user.isAdmin===true ? 'True' : 'No' %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>

                    </div>
    </body>
    <script>

        $(document).ready(function () {
            $('#mytable').DataTable();
        });
        $('#mytable').DataTable({
            
            "language": {
             "lengthMenu": "Total item _MENU_ ",
             "zeroRecords": "No Result",
             "info": " ",
             "infoEmpty": "Display 0 to 0 of 0 Total items",
             "infoFiltered": "",
             "search": "Search:",
             "paginate": {
                 "first": "Đầu",
                 "last": "Cuối",
                 "next": "Next",
                 "previous": "Previous"
             },
         }, 
         "lengthMenu": [[2, 3, 5, 10, 20], [2, 3, 5, 10, 20]]
         });
    </script>

</html>