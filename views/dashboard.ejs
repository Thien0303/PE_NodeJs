<!DOCTYPE html>
<html>
  <%- include ('./patials/head') %>
<head>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
</head>
<body>
	<div style="width: 50%; height: 100%; margin-top: 134px; margin-bottom: 100px; margin-left: 350px;">
    <canvas id="myChart"></canvas>
  </div>
  
  <script>
    var totalCaptain = <%= captainPlayers %>;
    var totalNonCaptain = <%= nonCaptain %>;
    var totalUsers = <%= totalUsers %>;
  
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: ['Total Captain', 'Total Non-Captain', 'Total Users'],
        datasets: [{
          label: '# of Votes',
          data: [totalCaptain, totalNonCaptain, totalUsers],
          backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)'
          ],
          borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)'
          ],
          borderWidth: 1
        }]
      },
      options: {
      }
    });
  </script>
  
</body>
<%- include ('./patials/footer') %>
</html>
